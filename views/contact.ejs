<h2 class="mt-4 mb-3">Contact List</h2>

<% if(cont.length < 1) { %>
<!-- jika data cont kosong maka tampilkan pesan data cont kosong  -->
<p>Contact data is empty</p>
<% }else { %>
<!-- jika ada data cont maka tampilkan data nya  -->
<table class="table table-hover">
  <thead class="bg-primary text-light">
    <tr>
      <th scope="col">No</th>
      <th scope="col">Nama</th>
      <th scope="col">Email</th>
    </tr>
  </thead>
  <tbody>
    <!-- menampilkan data cont dengan perulangan foreach -->
    <% cont.forEach((con, index) => { %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= con.name %></td>
      <td><%= con.email %></td>
    </tr>
    <% }); %>
  </tbody>
</table>
<% } %>
